        });

        if (response.ok) {
            const data = await response.json();
            let resultadosHTML = '';
            if (data.vendas && data.vendas.length > 0) {
                data.vendas.forEach(venda => {
                    resultadosHTML += `
            <div class="venda-item">
                <p><strong>Cliente:</strong> ${venda.comprador.nome}</p>
