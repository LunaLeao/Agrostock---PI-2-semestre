<script>
    function openVendaModal() {
        // Obtenha a venda selecionada
        const selectedRadio = document.querySelector('input[name="vendaSelecionada"]:checked');
        
        if (selectedRadio) {
            const selectedId = selectedRadio.value;

            // Obtenha os dados diretamente da tabela para a venda selecionada
            const compradorNome = document.querySelector(`#venda-row-${selectedId} td:nth-child(2)`).textContent.trim();
            const colheitaNome = document.querySelector(`#venda-row-${selectedId} td:nth-child(3)`).textContent.trim();
            const quantidade = document.querySelector(`#venda-row-${selectedId} td:nth-child(4)`).textContent.trim();
            const valorTotal = document.querySelector(`#venda-row-${selectedId} td:nth-child(5)`).textContent.trim().replace('R$ ', '').replace('.', '').replace(',', '.');
            const dataVenda = document.querySelector(`#venda-row-${selectedId} td:nth-child(6)`).textContent.trim();
            
            // Exibir no console a data extraída para verificar seu valor
            console.log("Data extraída da tabela:", dataVenda);

            // Preencha os campos do modal
            document.getElementById('vendaId').value = selectedId;

            // Selecionar o comprador no select de acordo com o ID
            document.getElementById('editarSelectComprador').value = selectedRadio.getAttribute('data-comprador');
            
            // Selecionar a colheita no select de acordo com o ID
            document.getElementById('editarSelectTipoProduto').value = selectedRadio.getAttribute('data-produto');
            
            // Preencher os outros campos
            document.getElementById('quantidade').value = quantidade;
            document.getElementById('itemValorTotal').value = valorTotal;

            // Verificar se a dataVenda tem um valor válido e converter para o formato 'YYYY-MM-DD'
            let dataFormatada = '';
            if (dataVenda) {
                // Converter data por extenso para formato válido
                const meses = [
                    'janeiro', 'fevereiro', 'março', 'abril', 'maio', 'junho', 
                    'julho', 'agosto', 'setembro', 'outubro', 'novembro', 'dezembro'
                ];

                // Expressão regular para encontrar o dia, mês e ano na data
                const regex = /(\d{1,2}) de (\w+) de (\d{4})/;
                const match = dataVenda.match(regex);

                if (match) {
                    const dia = match[1];
                    const mes = meses.indexOf(match[2].toLowerCase()) + 1; // Meses começam de 1
                    const ano = match[3];

                    // Formatar para o formato 'YYYY-MM-DD'
                    dataFormatada = `${ano}-${mes < 10 ? '0' + mes : mes}-${dia < 10 ? '0' + dia : dia}`;
                }
            }

            // Exibir no console a data formatada para verificação
            console.log("Data formatada:", dataFormatada);

            // Se a data for válida, aplique no campo
            if (dataFormatada) {
                document.getElementById('data_venda').value = dataFormatada;
            }

            // Abrir o modal
            const modal = new bootstrap.Modal(document.getElementById('vendaModal'));
            modal.show();
        } else {
            alert("Por favor, selecione uma venda para editar.");
        }
    };

document.querySelector('.btn.btn-custom2').addEventListener('click', function() {
    const tableRows = document.querySelectorAll('table tbody tr');
    const vendas = [];

    tableRows.forEach(row => {
        const cells = row.querySelectorAll('td');
        const venda = {
            cliente: cells[1].innerText,
            produto: cells[2].innerText,
            quantidade: cells[3].innerText,
            valor_venda: cells[4].innerText,
            data_venda: cells[5].innerText
        };
        vendas.push(venda);
    });

    // Enviar os dados para o servidor
    fetch('/gerar-relatorio-vendas', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ vendas: vendas })
    })
    .then(response => response.blob())
    .then(blob => {
        // Criar um link para baixar o PDF gerado
        const link = document.createElement('a');
        link.href = URL.createObjectURL(blob);
        link.download = 'relatorio_vendas.pdf';
        link.click();
    })
    .catch(error => console.error('Erro ao gerar o PDF:', error));
});


